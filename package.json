{
  "name": "polka-codes",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "bun --filter './packages/**' build",
    "lint": "biome check .",
    "fix": "biome check --write",
    "check": "tsc --noEmit && biome check",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "clean": "rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "cli": "bun run --no-check packages/cli/src/index.ts",
    "pr": "bun cli pr",
    "commit": "bun cli commit",
    "codegen": "cd packages/github; graphql-codegen"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@microsoft/api-extractor": "^7.53.0",
    "bun-types": "^1.2.23",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "packageManager": "bun@1.2.0",
  "dependencies": {
    "@graphql-codegen/cli": "^6.0.0"
  }
}
