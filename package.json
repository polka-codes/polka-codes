{
  "name": "polka-codes",
  "private": true,
  "workspaces": ["packages/*"],
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "bun --filter './packages/**' build",
    "publish": "bun run clean && bun run build && bun publish --cwd packages/core --access public && bun publish --cwd packages/cli --access public",
    "lint": "biome check .",
    "fix": "biome check --write",
    "check": "tsc --noEmit && biome check",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "clean": "rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "cli": "bun run --no-check packages/cli/src/index.ts",
    "pr": "bun cli pr",
    "commit": "bun cli commit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@microsoft/api-extractor": "^7.51.1",
    "bun-types": "^1.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --write --no-errors-on-unmatched"]
  },
  "packageManager": "bun@1.2.0"
}
