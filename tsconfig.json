{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["bun-types"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "paths": {
      "@polka-codes/core": ["./packages/core/src"],
      "@polka-codes/cli": ["./packages/cli/src"],
      "@polka-codes/action": ["./packages/action/src"],
      "@polka-codes/runner": ["./packages/runner/src"],
      "@polka-codes/cli-shared": ["./packages/cli-shared/src"]
    }
  },
  "exclude": [
    "packages/cli/src/file-attachments.test.ts",
    "packages/core/src/workflow/json-schema-conversion.test.ts",
    "packages/core/src/workflow/dynamic-edge-cases.test.ts"
  ]
}
